{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@pages/*": ["./pages/*"],
      "@composables/*": ["./composables/*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@middleware/*": ["./middleware/*"],
      "@constants/*": ["./constants/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@i18n/*": ["./i18n/*"],
      "@stores/*": ["./stores/*"],
      "@mocks/*": ["specs/__mocks__/*"],
      "@locales/*": ["./i18n/locales/*"]
    }
  }
}
